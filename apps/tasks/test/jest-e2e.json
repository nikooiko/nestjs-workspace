{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/core(|/.*)$": "<rootDir>../../libs/core/src/$1"
  },
  "setupFiles": [
    "<rootDir>/test/setEnvVars.ts"
  ]
}
